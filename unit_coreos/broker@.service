[Unit]
Description=broker
BindsTo=frontend@%i.service

[Service]
ExecStartPre=-/usr/bin/docker kill broker-%i
ExecStartPre=-/usr/bin/docker rm broker-%i
ExecStart=/usr/bin/docker run --rm --name broker-%i -P rabbitmq:3.5.3
ExecStop=/usr/bin/docker stop broker-%i

[X-Fleet]
MachineOf=frontend@%i.service
