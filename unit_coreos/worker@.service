[Unit]
Description=Worker
BindsTo=broker@%i.service

[Service]
ExecStartPre=-/usr/bin/docker kill worker-%i
ExecStartPre=-/usr/bin/docker rm worker-%i
ExecStart=/usr/bin/docker run --rm --name worker-%i  nherbaut/worker
ExecStop=/usr/bin/docker stop worker-%i

[X-Fleet]
MachineOf=broker@%i.service


